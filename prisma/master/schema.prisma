generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/master-client"
}

datasource db {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
}

model Kbli {
  // ini nullable
  id_kbli  Int     @id @default(autoincrement())
  kode     String? @unique @db.Text
  kategori String? @db.Text
  judul    String? @db.VarChar(255)
  uraian   String? @db.Text
  tahun    String? @db.Text
  status   Int?

  @@map("m_kbli")
}

model Wilayah {
  series        Int      @id @default(autoincrement())
  id            String?  @db.VarChar(31)
  nama_old      String?  @db.VarChar(127)
  tipe          String?  @db.VarChar(15)
  lat           Float?   @db.DoublePrecision
  lon           Float?   @db.DoublePrecision
  nama_dukcapil String?  @db.VarChar(255)
  dukcapil      Int?
  nama          String?  @db.VarChar(127)
  isactive      Int?     @db.SmallInt
  aliases       String[] @db.VarChar

  @@map("wilayah")
}

model Pekerjaan {
  id_pekerjaan   Int     @id @default(autoincrement())
  nama_pekerjaan String? @db.VarChar(255)

  @@map("m_pekerjaan")
}

model NotarisPengganti {
  id          Int     @id @default(autoincrement())
  nama        String? @db.VarChar(255)
  provinsi    String? @db.Text
  id_provinsi Int?

  @@map("notaris")
}

model Agama {
  id_agama          Int     @id @default(autoincrement())
  agama       String? @db.VarChar(255)

  @@map("r_agama")
}
