generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/notaris-client"
}

datasource db {
  provider = "postgresql"
  url      = env("NOTARIS_DATABASE_URL")
}

model Notais {
  id_notaris                     Int                   @id @default(autoincrement())
  id_user                        Int?                  @unique
  nama_lengkap                   String?               @db.VarChar(100)
  nama_kecil                     String?               @db.VarChar(100)
  nama_alias                     String?               @db.VarChar(100)
  nik                            String?               @db.VarChar(16)
  npwp                           String?               @db.VarChar(20)
  tempat_lahir                   String?               @db.VarChar(100)
  tgl_lahir                      DateTime?             @db.Date
  jenis_kelamin                  EnumJenisKelamin?
  agama                          EnumAgama?
  status_perkawinan              EnumStatusPerkawinan?
  alamat_rumah                   String?               @db.Text
  rt                             String?               @db.VarChar(3)
  rw                             String?               @db.VarChar(3)
  kode_pos                       String?               @db.VarChar(5)
  id_provinsi                    Int?
  id_kab_kota                    Int?
  id_kecamatan                   Int?
  id_desa_kel                    Int?
  no_telp                        String?               @db.VarChar(20)
  no_hp                          String?               @db.VarChar(20)
  email                          String?               @db.VarChar(100)
  email_alternatif               String?               @db.VarChar(100)
  id_sekolah_s1                  Int?
  no_ijazah_s1                   String?               @db.VarChar(100)
  tgl_ijazah_s1                  DateTime?             @db.Date
  id_sekolah_s2                  Int?
  no_ijazah_s2                   String?               @db.VarChar(100)
  tgl_ijazah_s2                  DateTime?             @db.Date
  daerah_skck                    String?               @db.VarChar(100)
  no_skck                        String?               @db.VarChar(100)
  tgk_terbit_skck                DateTime?             @db.Date
  tgl_kadaluarsa_skck            DateTime?             @db.Date
  no_sertifikat                  String?               @db.VarChar(100)
  id_provinsi_penempatan         Int?
  id_kab_kota_penempatan         Int?
  no_sk_pelantikan_berita_acara  String?               @db.VarChar(100)
  tgl_sk_pelantikan_berita_acara DateTime?             @db.Date
  nama_gelar                     String?               @db.VarChar(255)

  @@map("m_notaris")
}

enum EnumJenisKelamin {
  lakiLaki  @map("L")
  perempuan @map("P")
}

enum EnumAgama {
  islam            @map("Islam")
  katolik          @map("Katolik")
  kristenProtestan @map("Kristen Protestan")
  hindu            @map("Hindu")
  buddha           @map("Buddha")
  konghucu         @map("Konghucu")
  lainnya          @map("Lainnya")
}

enum EnumStatusPerkawinan {
  belumKawin @map("Belum Kawin")
  kawin      @map("Kawin")
  ceraiHidup @map("Cerai Hidup")
  ceraiMati  @map("Cerai Mati")
}
