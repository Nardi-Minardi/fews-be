generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/userman-client"
}

datasource db {
  provider = "postgresql"
  url      = env("USERMAN_DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  created_at         DateTime? @default(now()) @db.Timestamptz(6)
  updated_at         DateTime? @db.Timestamptz(6)
  deleted            Int?      @db.SmallInt
  fullname           String?   @db.VarChar(128)
  username           String?   @db.VarChar(128)
  password           String   @db.VarChar(256)
  valid              Int?      @db.SmallInt
  created_by         String?   @db.VarChar(63)
  updated_by         String?   @db.VarChar(63)
  nik                String?   @db.VarChar(50)
  email              String?   @db.VarChar(255)
  no_telp            String?   @db.VarChar(50)
  identifier         String?   @db.VarChar(100)
  jenis_korporasi    Int?      @db.Integer
  tgl_izin           DateTime? @db.Date
  jenis_kantor       Int?      @db.Integer
  nib                String?   @db.VarChar(50)
  no_sk              String?   @db.VarChar(255)
  npwp               String?   @db.VarChar(50)
  no_rekom_ojk_bi    String?   @db.VarChar(255)
  no_kitas_paspor    String?   @db.VarChar(100)
  tmpt_lahir         String?   @db.VarChar(255)
  tgl_lahir          DateTime? @db.Date
  jns_kelamin        String?   @db.VarChar(2)
  agama              Int?      @db.Integer
  alamat             String?   @db.Text
  id_prov            String?   @db.VarChar(32)
  id_kab             String?   @db.VarChar(32)
  id_kec             String?   @db.VarChar(32)
  id_kel             String?   @db.VarChar(32)
  rt                 String?   @db.VarChar(32)
  rw                 String?   @db.VarChar(32)
  kode_pos           String?   @db.VarChar(32)
  nip                String?   @db.VarChar(100)

  @@map("m_users")
}
