{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "NestJS boilerplate for starter",
  "scripts": {
    "build": "nest build",
    "env:dev": "cross-env APP_ENV=dev node scripts/switch-env.js",
    "env:staging": "cross-env APP_ENV=staging node scripts/switch-env.js",
    "env:prod": "cross-env APP_ENV=prod node scripts/switch-env.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run env:dev && cross-env LOG_LEVEL=info nest start",
    "start:dev": "npm run env:dev && cross-env LOG_LEVEL=info nodemon --watch src --ext ts --exec \"nest start\"",
    "start:staging": "npm run env:staging && cross-env LOG_LEVEL=info node dist/main",
    "start:debug": "npm run env:dev && cross-env LOG_LEVEL=debug nodemon --watch src --ext ts --exec \"nest start --debug\"",
    "start:prod": "npm run env:prod && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:migrate:dev": "npx prisma migrate dev --name init",
    "prisma:migrate:prod": "npx prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "npx prisma migrate reset --force --skip-seed && npx prisma db push && npm run prisma:seed"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.859.0",
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/websockets": "^11.1.8",
    "@prisma/client": "^6.13.0",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dayjs": "^1.11.13",
    "dayjs-plugin-utc": "^0.1.2",
    "ioredis": "^5.7.0",
    "ms": "^2.1.3",
    "multer": "^2.0.1",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.17.1",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "prisma": "^6.13.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}